{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "rules": {
                "@typescript-eslint/no-namespace": "off",
                "no-inner-declarations": "off"
            }
        }
    ]
}